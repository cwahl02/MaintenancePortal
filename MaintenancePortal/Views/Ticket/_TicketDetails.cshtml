@model TicketEditableViewModel

<div class="card-body">
    <div id="ticketHeader">
        <div class="view-mode d-flex justify-content-between align-items-center">
            <h3 id="ticketTitleDisplay">@Model.Title <span class="text-secondary fw-light">#@Model.Id</span></h3>
            @if (Model.CanEdit)
            {
                <button class="btn btn-outline-primary" onclick="editTicket(@Model.Id)">Edit</button>
            }
        </div>
    </div>
    <hr />
    <h5>Description</h5>
    <div id="ticketDescription">
        <p>@Model.Description</p>
    </div>
</div>